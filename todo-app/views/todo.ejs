<div>
    <div class="flex">
      <h5><%= container %></h5>  
      <span id="<%= id %>" class="ml-3 px-2 bg-gray-100 rounded"><%= todos.length %></span>
    </div>
    <ul class="list-none">
      <% for (var i = 0; i< todos.length; i++) { %>
        <li class="Todo-Item">
            <div class="flex items-center w-fit my-2 px-2 py-1 rounded hover:bg-purple-50">
                <input type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 rounded border-gray" <%= todos[i].completed ? "checked" : "" %> onclick="updateTodo(<%= todos[i].id %>,<%= todos[i].completed %>)" id="todo-checkbox-<%= todos[i].id%>">
                <label for = "todo-checkbox-<%= todos[i].id%>" class="ml-2 text-sm text-gray-600">
                    <%= todos[i].title %>
                </label>
                <a href="#" class="hidden trash-icon ml-2" onclick="deleteTodo(<%= todos[i].id %>)">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m6.75 12H9m1.5-12H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                  </svg>
                       
                </a> 
            </div>
        </li>
      <% } %>
    </ul>
</div>
